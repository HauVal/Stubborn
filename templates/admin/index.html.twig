{% extends 'base.html.twig' %}

{% block title %}Administrateur{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">

<header>
    <div class="logo">
        <img src="{{ asset('images/Logo.png') }}" alt="Logo">
        <p>Don't compromise on your look</p>
    </div>

    <h1>Back-Office</h1>
    
    <nav>
        <a href="/">Accueil</a>
        <a href="/logout">Se d√©connecter</a>
    </nav>
</header>

<div>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Stock XS</th>
                <th>Stock S</th>
                <th>Stock M</th>
                <th>Stock L</th>
                <th>Stock XL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.stock }}</td>
                    <td>
                        <form method="POST" action="{{ path('admin_product_edit', { id: product.id }) }}">
                            <button>Modifier</button>
                        </form>
                        <form method="POST" action="{{ path('admin_product_delete', { id: product.id }) }}">
                            <button>Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>Ajouter un produit</h2>
    <form method="POST" action="{{ path('admin_product_add') }}" enctype="multipart/form-data">
        {{ form_widget(form) }}
        <button type="submit">Ajouter</button>
    </form>
</div>
{% endblock %}
