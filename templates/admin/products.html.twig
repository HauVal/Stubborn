{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des produits</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a href="{{ path('admin_product_edit', { id: product.id }) }}">Modifier</a>
                        <form method="POST" action="{{ path('admin_product_delete', { id: product.id }) }}" style="display:inline;">
                            <button type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_product_add') }}">Ajouter un nouveau produit</a>
{% endblock %}
