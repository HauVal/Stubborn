{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

<link rel="stylesheet" href="{{ asset('css/register.css') }}">

<header>
    <div class="logo">
        <img src="{{ asset('images/Logo.png') }}" alt="Logo">
        <p>Don't compromise on your look</p>
    </div>
    
    <nav>
        <a href="/">Accueil</a>
        <a href="/register" class="select">S'inscrire</a>
        <a href="/login">Se connecter</a>
    </nav>
</header>

<div>
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: 'Nom d’utilisateur'
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'Adresse email'
        }) }}
        {{ form_row(registrationForm.deliveryAddress, {
            label: 'Adresse de livraison'
        }) }}
        {{ form_row(registrationForm.plainPassword.first, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.plainPassword.second, {
            label: 'Confirmez le mot de passe'
        }) }}

        <button type="submit" class="btn">Créer un compte</button>
    {{ form_end(registrationForm) }}
</div>

    <div>
        <p>Déjà inscrit ?</P>
        <button><a href="/login">Se connecter</a></button>
    </div>


</div>

<footer>
    <p><strong>Stubborn</strong> est une entreprise de vente de sweat-shirts.</p>
    <p>Piccadilly Circus, London W1J 0DA, Royaume-Uni</p>
    <a href="mailto:stubborn@blabla.com">stubborn@blabla.com</a>
</footer>
{% endblock %}
